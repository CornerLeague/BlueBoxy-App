// Debug.xcconfig
// Environment Configuration (Non-sensitive values only)
// Based on XcodeGen best practices for reliable variable resolution

// Network Configuration - using components to avoid URL parsing issues
API_HOST = 127.0.0.1
API_PORT = 3001
API_SCHEME = http
API_HOST_FALLBACK = 192.168.1.41

// Bundle Configuration
PRODUCT_BUNDLE_IDENTIFIER = ai.blueboxy.BlueBoxy.dev

// iOS Deployment Target
IPHONEOS_DEPLOYMENT_TARGET = 16.0

// Compilation flags
SWIFT_ACTIVE_COMPILATION_CONDITIONS = DEBUG

// API Configuration (non-sensitive)
OPENAI_BASE_URL = https://api.openai.com/v1
XAI_BASE_URL = https://api.x.ai/v1

// Development flags
ENABLE_LOGGING = 1
DEBUG_API_CALLS = 1
